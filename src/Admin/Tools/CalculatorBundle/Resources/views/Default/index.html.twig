{% extends '::base.html.twig' %}

{% block body -%}
    <blockquote>
        <form action="{{ path('_tools_calculator') }}" class="form-horizontal" method="POST" id="calculator_form">
            <div class="form-group">
                <label for="string" class="col-sm-2 control-label">Text</label>

                <div class="col-sm-8">
                    {{ form_widget(form.string) }}
                </div>
            </div>
            <div class="form-group">
                <label for="md5" class="col-sm-2 control-label">MD5</label>

                <div class="col-sm-8">
                    {{ form_widget(form.md5) }}
                </div>
            </div>
            <div class="form-group">
                <label for="sha1" class="col-sm-2 control-label">SHA1</label>

                <div class="col-sm-8">
                    {{ form_widget(form.sha1) }}
                </div>
            </div>
            <div class="form-group">
                <label for="time" class="col-sm-2 control-label">Time</label>

                <div class="col-sm-8">
                    {{ form_widget(form.time) }}
                </div>
            </div>
            <div class="form-group text-center">
                <div class="col-sm-10">
                    {{ form_widget(form.save) }}
                </div>
            </div>
        </form>
    </blockquote>

{% endblock %}